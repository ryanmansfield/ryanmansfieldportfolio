<div class="contact-form">
  <h3>Send me a message</h3>

  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <div class="row">
      <div class="col">
        <%= f.input :name, label: false, placeholder: 'name', :required => true%>

      </div>
      <div class="col">
        <%= f.input :email, label: false, placeholder: 'email', :required => true %>

      </div>
    </div>
    <%= f.input :message, label: false, placeholder: 'message', :as => :text, :required => true, input_html: { :rows => 10 } %>
    <div class= "hidden">
      <%= f.input :nickname, :as => :hidden %>
    </div>
    <div>
      </br>
      <%= f.button :submit, 'Send message', :class=> "btn btn-flat" %>
    </div>
  <% end %>
</div>
